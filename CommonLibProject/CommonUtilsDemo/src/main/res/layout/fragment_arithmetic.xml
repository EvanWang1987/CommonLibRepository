<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.evan.common_utils.ui.view.LogCatView
        android:id="@+id/log_cat_view"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2">

        <android.support.v7.widget.CardView
            android:id="@+id/card_binary_search"
            style="@style/CommonCardButton"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1">

            <TextView
                style="@style/CommonCardText"
                android:text="@string/binary_search" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_select_sort"
            style="@style/CommonCardButton"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1">

            <TextView
                style="@style/CommonCardText"
                android:text="@string/select_sort" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_bubble_sort"
            style="@style/CommonCardButton"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1">

            <TextView
                style="@style/CommonCardText"
                android:text="@string/bubble_sort" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_merge_sort"
            style="@style/CommonCardButton"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1">

            <TextView
                style="@style/CommonCardText"
                android:text="@string/merge_sort" />

        </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>

</LinearLayout>

