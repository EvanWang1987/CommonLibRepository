<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bkg_user_information">

    <com.github.evan.common_utils.ui.view.CircleImageView
        android:id="@+id/portrait"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="15dp"
        app:civ_border_color="@color/PaleVioletRed"
        app:civ_border_width="2dp"
        app:srcCompat="@mipmap/portrait" />


    <TextView
        android:id="@+id/txtHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:textColor="@color/text_color_white"
        android:text="@string/home_page_link"
        android:textSize="12sp" />


</FrameLayout>