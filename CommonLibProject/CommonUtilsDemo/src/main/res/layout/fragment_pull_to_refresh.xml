<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount="2">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <Button
                android:id="@+id/btn_with_text_view_pull_to_refresh_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_orange_bkg_with_round_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/classic_indicator_with_ptl" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <Button
                android:id="@+id/btn_with_view_group_pull_to_refresh_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_orange_bkg_with_round_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/classic_pro_indicator_with_ptl" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <Button
                android:id="@+id/btn_with_list_view_pull_to_refresh_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_orange_bkg_with_round_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/gif_indicator_with_ptl" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <Button
                android:id="@+id/btn_with_grid_view_pull_to_refresh_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_orange_bkg_with_round_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/large_image_indicator_with_ptr" />


        </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>


</LinearLayout>