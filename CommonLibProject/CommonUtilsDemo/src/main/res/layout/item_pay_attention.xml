<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bkg_with_round_corner"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ic_portrait_pay_attention_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@mipmap/portrait_01" />

        <TextView
            android:id="@+id/txt_channel_pay_attention_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp"
            tools:text="@string/girl_channel" />

        <TextView
            android:id="@+id/btn_pay_attention_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_common_red_button"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/pay_attention"
            android:textColor="@color/text_color_white"
            android:textSize="12sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>