<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root_default_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bkg_with_round_corner"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_icon_default_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/ic_list_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/txt_title_default_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_item_title"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_desc_default_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_default_holder"
                android:layout_marginTop="5dp"
                android:text="@string/list_item_desc"
                android:textColor="@color/text_color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_thumb_up_default_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txt_desc_default_holder"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/selector_button_thumb_up_black_36dp"
                android:drawablePadding="5dp"
                android:text="@string/list_item_thumb_up"
                android:textColor="@color/text_color_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_position_default_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_ring_red"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="@color/White"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>