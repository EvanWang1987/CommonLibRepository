<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/txt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title_indicator_git_with_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jd_make_your_shopping_faster"
            android:textColor="@color/text_color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_desc_indicator_git_with_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/pulling"
            android:textColor="@color/text_color_black"
            android:textSize="12sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/ic_drawable_indicator_git_with_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/txt_layout"
        android:src="@mipmap/ic_express" />

    <com.github.evan.common_utils.ui.view.GifView
        android:id="@+id/gif_indicator_git_with_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/txt_layout"
        app:gif="@mipmap/gif_jd_carrier"
        app:paused="true" />


</RelativeLayout>