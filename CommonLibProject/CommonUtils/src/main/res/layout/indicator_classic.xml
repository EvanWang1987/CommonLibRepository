<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title_indicator_classic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pulling"
                android:textColor="@color/text_color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_desc_indicator_classic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/last_refresh_time"
                android:textColor="@color/text_color_black"
                android:textSize="12sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ic_progress_indicator_classic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/txt_layout"
            android:src="@mipmap/icon_loading_small" />

    </RelativeLayout>


</LinearLayout>