<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeAppCompatLightDarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorControlNormal">@color/White</item>
    </style>

    <style name="ThemeAppCompatLightDarkActionBarPopMenuNotOverToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="actionBarPopupTheme">@style/ActionBarPopupMenuNotOverActionBar</item>
    </style>

    <style name="ThemeAppCompatLightNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorControlNormal">@color/White</item>
    </style>

    <style name="ActionBarPopupMenuNotOverActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>                         <!-- 是否弹出在ToolBar上 -->
    </style>

    <style name="ActionBarPopupMenuOverActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">true</item>                         <!-- 是否弹出在ToolBar上 -->
    </style>

    <style name="ThemeDarkActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/White</item>
        <item name="android:textColorPrimary">@color/text_color_white</item>
        <item name="android:textColorSecondary">@color/text_color_white</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="ThemeLightActionBar">
        <item name="colorControlNormal">@color/Black</item>
        <item name="android:textColorPrimary">@color/text_color_black</item>
        <item name="android:textColorSecondary">@color/text_color_black</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="ThemeDarkCollapsingToolBarLayout">

    </style>

    <style name="WhiteTitleAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="BlackTitleAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="GridHolderPopMenuStyle" parent="ActionBarPopupMenuNotOverActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="TabItemTextAppearance_White">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_text_color_light</item>
    </style>

    <style name="TabItemTextAppearance_Black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_text_color_dark</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget" />

    <style name="windowAnimationLeftToRight" >
        <item name="android:windowEnterAnimation">@anim/activity_left_to_right_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_left_to_right_exit</item>
    </style>

    <style name="windowAnimationRightToLeft" >
        <item name="android:windowEnterAnimation">@anim/activity_right_to_left_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_right_to_left_exit</item>
    </style>

    <style name="windowAnimationTopToBottom" >
        <item name="android:windowEnterAnimation">@anim/activity_top_to_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_top_to_bottom_exit</item>
    </style>

    <style name="windowAnimationBottomToTop" >
        <item name="android:windowEnterAnimation">@anim/activity_bottom_to_top_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_bottom_to_top_exit</item>
    </style>

    <style name="AppCompatLightNoActionBarTransparentActivityWithLeftToRightAnim" parent="ThemeAppCompatLightNoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationLeftToRight</item>
    </style>

    <style name="AppCompatLightWithActionBarTransparentActivityWithLeftToRightAnim" parent="ThemeAppCompatLightDarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationLeftToRight</item>
    </style>

    <style name="AppCompatLightNoActionBarTransparentActivityWithRightToLeftAnim" parent="ThemeAppCompatLightNoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationRightToLeft</item>
    </style>

    <style name="AppCompatLightWithActionBarTransparentActivityWithRightToLeftAnim" parent="ThemeAppCompatLightDarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationRightToLeft</item>
    </style>

    <style name="AppCompatLightNoActionBarTransparentActivityWithTopToBottomAnim" parent="ThemeAppCompatLightNoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTopToBottom</item>
    </style>

    <style name="AppCompatLightWithActionBarTransparentActivityWithTopToBottomAnim" parent="ThemeAppCompatLightDarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTopToBottom</item>
    </style>

    <style name="AppCompatLightNoActionBarTransparentActivityWithBottomToTopAnim" parent="ThemeAppCompatLightNoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationBottomToTop</item>
    </style>

    <style name="AppCompatLightWithActionBarTransparentActivityWithBottomToTopAnim" parent="ThemeAppCompatLightDarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationBottomToTop</item>
    </style>

</resources>