<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingPager" >
        <attr name="loadingDrawable" format="reference"/>
        <attr name="loadingText" format="string"/>
        <attr name="unknownDrawable" format="reference"/>
        <attr name="unknownText" format="string"/>
        <attr name="loadEmptyDrawable" format="reference"/>
        <attr name="loadEmptyText" format="string"/>
        <attr name="netUnAvailableDrawable" format="reference"/>
        <attr name="netUnAvailableText" format="string"/>
        <attr name="netTimeoutDrawable" format="reference"/>
        <attr name="netTimeoutText" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="isLoadingWithRotateAnimation" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LimitEditText">
        <attr name="isLimitInputCount" format="boolean"/>
        <attr name="limitCount" format="integer"/>
        <attr name="isShowClearInputButton" format="boolean"/>
        <attr name="isShowExtraButton" format="boolean"/>
        <attr name="clearInputButtonDrawable" format="reference"/>
        <attr name="extraButtonDrawable" format="reference"/>
        <attr name="isShowTotalInputCount" format="boolean"/>
        <attr name="isToastIfOverRangingLimitCount" format="boolean"/>
        <attr name="toastText" format="string"/>
        <attr name="totalInputCountTextColor" format="color"/>
        <attr name="totalInputCountTextSize" format="dimension"/>
    </declare-styleable>

</resources>