<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="intercept_mode">
        <attr name="interceptMode" format="enum">
            <enum name="use_view_default" value="0"/>
            <enum name="all_by_itself" value="1"/>
            <enum name="horizontal_by_itself" value="2"/>
            <enum name="vertical_by_itself" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingPager" >
        <attr name="loadingDrawable" format="reference"/>
        <attr name="loadingText" format="string"/>
        <attr name="unknownDrawable" format="reference"/>
        <attr name="unknownText" format="string"/>
        <attr name="loadEmptyDrawable" format="reference"/>
        <attr name="loadEmptyText" format="string"/>
        <attr name="netUnAvailableDrawable" format="reference"/>
        <attr name="netUnAvailableText" format="string"/>
        <attr name="netTimeoutDrawable" format="reference"/>
        <attr name="netTimeoutText" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="isLoadingWithRotateAnimation" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LimitEditText">
        <attr name="isLimitInputCount" format="boolean"/>
        <attr name="limitCount" format="integer"/>
        <attr name="isShowTotalInputCount" format="boolean"/>
        <attr name="isToastIfOverRangingLimitCount" format="boolean"/>
        <attr name="toastText" format="string"/>
        <attr name="totalInputCountTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExtraButtonEditText">
        <attr name="isShowLeftButton" format="boolean"/>
        <attr name="isShowRightButton" format="boolean"/>
        <attr name="leftButtonDrawableRes" format="reference"/>
        <attr name="rightButtonDrawableRes" format="reference"/>
        <attr name="isAutoClearTextWhenClickRightButton" format="boolean"/>
        <attr name="isAutoClearTextWhenClickLeftButton" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="passwordVisibilityDrawable" format="reference"/>
        <attr name="passwordVisibilityChecked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LoginEditText">
        <attr name="isShowClearButton" format="boolean"/>
        <attr name="isShowDisplayPwdButton" format="boolean"/>
        <attr name="isShowLeftIcon" format="boolean"/>
        <attr name="clearButtonDrawable" format="reference"/>
        <attr name="displayPwdButtonDrawable" format="reference"/>
        <attr name="leftIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TimeFlagTextView">
        <attr name="flagName" format="string"/>
        <attr name="flagDrawable" format="reference"/>
        <attr name="flagLocation" format="enum">
            <enum name="left_top_corner" value="0"/>
            <enum name="left_bottom_corner" value="1"/>
            <enum name="right_top" value="2"/>
            <enum name="right_bottom" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

</resources>