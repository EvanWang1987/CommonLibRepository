<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingPager" >
        <attr name="loadingDrawable" format="reference"/>
        <attr name="loadingText" format="string"/>
        <attr name="unknownDrawable" format="reference"/>
        <attr name="unknownText" format="string"/>
        <attr name="loadEmptyDrawable" format="reference"/>
        <attr name="loadEmptyText" format="string"/>
        <attr name="netUnAvailableDrawable" format="reference"/>
        <attr name="netUnAvailableText" format="string"/>
        <attr name="netTimeoutDrawable" format="reference"/>
        <attr name="netTimeoutText" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="isLoadingWithRotateAnimation" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LimitEditText">
        <attr name="isLimitInputCount" format="boolean"/>
        <attr name="limitCount" format="integer"/>
        <attr name="isShowTotalInputCount" format="boolean"/>
        <attr name="isToastIfOverRangingLimitCount" format="boolean"/>
        <attr name="toastText" format="string"/>
        <attr name="totalInputCountTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExtraButtonEditText">
        <attr name="isShowLeftButton" format="boolean"/>
        <attr name="isShowRightButton" format="boolean"/>
        <attr name="leftButtonDrawableRes" format="reference"/>
        <attr name="rightButtonDrawableRes" format="reference"/>
        <attr name="isAutoClearTextWhenClickRightButton" format="boolean"/>
        <attr name="isAutoClearTextWhenClickLeftButton" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="passwordVisibilityDrawable" format="reference"/>
        <attr name="passwordVisibilityChecked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LoginEditText">
        <attr name="isShowClearButton" format="boolean"/>
        <attr name="isShowDisplayPwdButton" format="boolean"/>
        <attr name="isShowLeftIcon" format="boolean"/>
        <attr name="clearButtonDrawable" format="reference"/>
        <attr name="displayPwdButtonDrawable" format="reference"/>
        <attr name="leftIcon" format="reference"/>
    </declare-styleable>

</resources>